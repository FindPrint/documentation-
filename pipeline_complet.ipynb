    f.write(f"alpha_mean calibré : {alpha_scaled:.4f}\n")
    f.write(f"Amplitude théorique calibrée : {amp_theo:.3f}\n")
    f.write(f"Erreur relative : {err:.2f}\n")

print("✅ Rapport final exporté dans resultats/rapport_final_reel.txt")



